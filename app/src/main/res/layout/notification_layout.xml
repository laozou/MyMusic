<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageButton
            android:contentDescription="@string/music_Play_Pause"
            android:id="@+id/notification_star_pause_music_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_grey_play"
            android:visibility="visible"
            android:layout_alignTop="@+id/notification_prev_music_button"
            android:layout_toRightOf="@+id/notification_prev_music_button"
            android:layout_toEndOf="@+id/notification_prev_music_button" />


        <ImageButton
            android:contentDescription="@string/musicNext"
            android:id="@+id/notification_next_music_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_grey_next"
            android:layout_alignTop="@+id/notification_star_pause_music_button"
            android:layout_toRightOf="@+id/notification_star_pause_music_button"
            android:layout_toEndOf="@+id/notification_star_pause_music_button" />

        <ImageButton
            android:contentDescription="@string/musicPrev"
            android:id="@+id/notification_prev_music_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_grey_prev"
            android:layout_below="@+id/notification_the_music_Name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/notification_the_music_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/musicName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>